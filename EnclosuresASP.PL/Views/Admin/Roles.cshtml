@using EnclosuresASP.DAL.Identity;
@model IEnumerable<AppRole>

@{
    ViewBag.Title = "Администрирование";
}

<br />
<p>
    <button id="addBtn" name="addBtn" class="k-primary" type="button" data-url="@Url.Action("CreateRole", "Admin")">Добавить</button>
    <script type="text/javascript">
        $("#addBtn").kendoButton().click(function () {
            var url = $(this).data('url');
            window.location.href = url;
        });
    </script>
</p>

<div class="panel panel-primary">
    <div class="panel-heading">
        Роли пользователей
    </div>
    <table class="table table-striped">
        <tr>
            <th>Id</th>
            <th>Роль</th>
            <th></th>
        </tr>
        @if (Model.Count() == 0)
        {
            <tr>
                <td colspan="4" class="text-center">Нет ни одной роли</td>
            </tr>
        }
        else
        {
            foreach (AppRole role in Model)
            {
                <tr>
                    <td>@role.Id</td>
                    <td>@role.Name</td>
                    <td>
                        @{
                            string editBtnName = "editBtn" + role.Id;
                            string detailsBtnName = "detailsBtn" + role.Id;
                            string deleteBtnName = "deleteBtn" + role.Id;
                            <button id=@editBtnName name=@editBtnName class="k-primary" type="button" data-url="@Url.Action("EditRole", "Admin", new { id = role.Id})">Редактировать</button>
                            <button id=@deleteBtnName name=@deleteBtnName class="k-primary" type="button" data-url="@Url.Action("DeleteRole", "Admin", new { id = role.Id})">Удалить</button>

                            <script type="text/javascript">
                                $('.k-primary').kendoButton().click(function () {
                                    var url = $(this).data('url');
                                    window.location.href = url;
                                });
                            </script>
                        }
                    </td>
                </tr>
            }
        }
    </table>
</div>