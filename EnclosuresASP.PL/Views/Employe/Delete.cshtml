@model EnclosuresASP.DAL.Entities.Employe

@{
    ViewBag.Title = "Delete";
}

<h2>Delete</h2>

<h3>Вы уверены, что хотите удалить запись?</h3>
<div>
    <h4>Сотрудник</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>ID</dt>
        <dd>
            @Html.DisplayFor(model => model.EmployeID)
        </dd>

        <dt>Ф.И.О.</dt>
        <dd>
            @Html.DisplayFor(model => model.FullName)
