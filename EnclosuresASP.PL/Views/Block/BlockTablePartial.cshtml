@model IEnumerable<EnclosuresASP.DAL.Entities.Block>

<table class="table table-striped">
    <tr>
        <th class="text-center">Название</th>
        <th class="text-center">УИД</th>
    </tr>
    @if (Model.Count() == 0)
    {
        <tr>
            <td colspan="2" class="text-center">Нет ни одного блока</td>
        </tr>
    }
    else
    {
        foreach (EnclosuresASP.DAL.Entities.Block block in Model)
        {
            <tr>
                <td class="text-center">
                    @Html.DisplayFor(modelItem => block.BlockName.BlockName)
                </td>
                <td class="text-center">
                    @Html.DisplayFor(modelItem => block.UID)
                </td>
            </tr>
        }
    }
</table>

